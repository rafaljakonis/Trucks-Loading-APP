<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="taskEntity"
            type="com.example.trucksload.data.model.Task" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/element_material_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/element_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/element_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/element_order"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"
                android:textSize="28sp"/>
            <View
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/confirm_text"
                app:layout_constraintTop_toBottomOf="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/element_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="14sp" />

            <View
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/confirm_text"
                app:layout_constraintTop_toBottomOf="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="1dp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/element_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/element_location"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/element_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/element_status"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/element_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/element_elements"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="17sp" />
        </LinearLayout>

<!--        <View-->
<!--            android:id="@+id/bottom_line"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="5dp"-->
<!--            android:background="@color/blue_700"-->
<!--            android:layout_gravity="bottom"/>-->


    </com.google.android.material.card.MaterialCardView>

</layout>